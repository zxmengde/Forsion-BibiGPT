# https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-xxx
# Custom OpenAI-compatible API endpoint (optional, defaults to https://api.openai.com/v1)
# Examples: https://api.openai.com/v1, http://localhost:1234/v1, https://api.example.com/v1
OPENAI_API_BASE_URL=https://api.openai.com/v1

# https://www.bilibili.com
BILIBILI_SESSION_TOKEN=

# https://savesubs.com
SAVESUBS_X_AUTH_TOKEN=

# Local Redis configuration (replaces Upstash)
# For local development, use: localhost:6379
# For Docker, use: redis:6379 (service name from docker-compose.yml)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Upstash (deprecated - use local Redis instead)
# https://upstash.com
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=
# UPSTASH_RATE_REDIS_REST_URL=${UPSTASH_REDIS_REST_URL}
# UPSTASH_RATE_REDIS_REST_TOKEN=${UPSTASH_RATE_REDIS_REST_TOKEN}

# https://supabase.com/docs/reference/javascript/initializing
SUPABASE_HOSTNAME=xxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_SUPABASE_URL=https://${SUPABASE_HOSTNAME}


############ Optional #################

# https://docs.sentry.io/product/cli/configuration
SENTRY_AUTH_TOKEN=

# https://www.lemonsqueezy.com
LEMON_API_KEY=

# https://segment.com
NEXT_PUBLIC_SEGMENT_WRITEKEY=

NEXT_PUBLIC_SITE_URL=
INTERNAL_API_HOSTNAME=api.example.com
